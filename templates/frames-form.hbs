<form class="gb-frames">
  <style>
    .gb-grid { display:grid; grid-template-columns: 1fr 1fr 1fr; gap:12px; }
    .gb-col  { border: var(--color-border-light-2, #888) 1px solid; border-radius:8px; padding:8px; }
    .gb-col h3 { margin: 0 0 6px 0; font-size: 1.05rem; }
    .fg { display:flex; align-items:center; justify-content:space-between; gap:8px; margin:6px 0; }
    .fg label { flex: 0 0 44%; }
    .fg input[type="text"], .fg input[type="number"], .fg select { flex: 1 1 auto; }
    .hexpair { display:flex; gap:8px; align-items:center; }
    .hexpair input[type="text"] { width: 120px; }
    .hexpair input[type="color"] { width: 44px; padding:0; }
  </style>

  <div class="gb-grid">
    <!-- Frame 1 -->
    <section class="gb-col">
      <h3>Frame 1</h3>

      <div class="fg">
        <label>Path</label>
        <div style="display:flex; gap:6px; flex:1;">
          <input type="text" name="frame1-path" value="{{f1.path}}" />
          <button type="button" data-action="fp" data-target="frame1-path"><i class="fas fa-folder-open"></i></button>
        </div>
      </div>

      <div class="fg">
        <label>Scale</label>
        <input type="number" step="0.01" name="frame1-scale" value="{{f1.scale}}" />
      </div>

      <div class="fg">
        <label>Tint Mode</label>
        <select name="frame1-tintMode">
          {{#each TINT_CHOICES}}
            <option value="{{@key}}" {{#if (eq ../f1.tintMode @key)}}selected{{/if}}>{{this}}</option>
          {{/each}}
        </select>
      </div>

      <div class="fg">
        <label>Use Player Color</label>
        <input type="checkbox" name="frame1-usePlayerColor" {{#if f1.usePlayerColor}}checked{{/if}} />
      </div>

      <div class="fg">
        <label>Default Color</label>
        <div class="hexpair">
          <input type="text"  name="frame1-defaultColor-text"  value="{{f1.defaultColor}}" placeholder="#RRGGBB" />
          <input type="color" name="frame1-defaultColor-color" value="{{f1.defaultColor}}" />
        </div>
      </div>
    </section>

    <!-- Frame 2 -->
    <section class="gb-col">
      <h3>Frame 2</h3>

      <div class="fg">
        <label>Enabled</label>
        <input type="checkbox" name="frame2-enabled" {{#if f2.enabled}}checked{{/if}} />
      </div>

      <div class="fg">
        <label>Path</label>
        <div style="display:flex; gap:6px; flex:1;">
          <input type="text" name="frame2-path" value="{{f2.path}}" />
          <button type="button" data-action="fp" data-target="frame2-path"><i class="fas fa-folder-open"></i></button>
        </div>
      </div>

      <div class="fg">
        <label>Scale</label>
        <input type="number" step="0.01" name="frame2-scale" value="{{f2.scale}}" />
      </div>

      <div class="fg">
        <label>Tint Mode</label>
        <select name="frame2-tintMode">
          {{#each TINT_CHOICES}}
            <option value="{{@key}}" {{#if (eq ../f2.tintMode @key)}}selected{{/if}}>{{this}}</option>
          {{/each}}
        </select>
      </div>

      <div class="fg">
        <label>Use Player Color</label>
        <input type="checkbox" name="frame2-usePlayerColor" {{#if f2.usePlayerColor}}checked{{/if}} />
      </div>

      <div class="fg">
        <label>Default Color</label>
        <div class="hexpair">
          <input type="text"  name="frame2-defaultColor-text"  value="{{f2.defaultColor}}" placeholder="#RRGGBB" />
          <input type="color" name="frame2-defaultColor-color" value="{{f2.defaultColor}}" />
        </div>
      </div>
    </section>

    <!-- Mask -->
    <section class="gb-col">
      <h3>Mask</h3>

      <div class="fg">
        <label>Enabled</label>
        <input type="checkbox" name="mask-enabled" {{#if mk.enabled}}checked{{/if}} />
      </div>

      <div class="fg">
        <label>Path</label>
        <div style="display:flex; gap:6px; flex:1;">
          <input type="text" name="mask-path" value="{{mk.path}}" />
          <button type="button" data-action="fp" data-target="mask-path"><i class="fas fa-folder-open"></i></button>
        </div>
      </div>
    </section>
  </div>

  <footer class="sheet-footer flexrow" style="margin-top:10px; gap:8px; justify-content:flex-end;">
    <button type="submit" class="dialog-button">Save</button>
  </footer>
</form>
