<form class="gb-colors">
  <table style="width:100%; border-collapse:collapse;">
    <thead>
      <tr>
        <th style="text-align:left; padding:4px 6px;">Disposition</th>
        <th style="text-align:left; padding:4px 6px;">Color Hex</th>
        <th style="text-align:left; padding:4px 6px;">Picker</th>
      </tr>
    </thead>
    <tbody>
      {{#each rows}}
      <tr>
        <td style="padding:4px 6px; width:30%;"><label for="{{role}}-text">{{role}}</label></td>
        <td style="padding:4px 6px; width:45%;"><input type="text" name="{{role}}-text" value="{{value}}" placeholder="#RRGGBB" /></td>
        <td style="padding:4px 6px; width:25%;"><input type="color" name="{{role}}-color" value="{{value}}" /></td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <div style="margin-top:8px; display:flex; gap:8px; justify-content:flex-end;">
    <button type="button" class="dialog-button" data-action="cancel">Cancel</button>
    <button type="button" class="dialog-button" data-action="save">Save</button>
  </div>
</form>
