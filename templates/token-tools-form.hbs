<div class="gbtf-setting-form__body">
  <div class="gbtf-setting-form__row">
    <label for="gbtf-setting-form-token-tools-size">
      <i class="gbtf-setting-form__label-icon fa-solid fa-down-left-and-up-right-to-center" aria-hidden="true"></i>
      <i class="gbtf-setting-form__label-icon fa-solid fa-up-right-and-down-left-from-center" aria-hidden="true"></i>
      {{localize "GBT.Tools.Config.Size"}}
    </label>
    <input id="gbtf-setting-form-token-tools-size" type="checkbox" name="size" {{checked size}} />
  </div>

  <div class="gbtf-setting-form__row">
    <label for="gbtf-setting-form-token-tools-size-min">
      <i class="gbtf-setting-form__label-icon fa-solid fa-down-left-and-up-right-to-center" aria-hidden="true"></i>
      {{localize "GBT.Tools.Config.SizeMin"}}
    </label>
    <input class="gbtf-setting-form__number" id="gbtf-setting-form-token-tools-size-min" type="number" name="sizeMin" min="1" max="99" step="1" value="{{sizeMin}}" />
  </div>

  <div class="gbtf-setting-form__row">
    <label for="gbtf-setting-form-token-tools-size-max">
      <i class="gbtf-setting-form__label-icon fa-solid fa-up-right-and-down-left-from-center" aria-hidden="true"></i>
      {{localize "GBT.Tools.Config.SizeMax"}}
    </label>
    <input class="gbtf-setting-form__number" id="gbtf-setting-form-token-tools-size-max" type="number" name="sizeMax" min="1" max="99" step="1" value="{{sizeMax}}" />
  </div>

  <div class="gbtf-setting-form__row">
    <label for="gbtf-setting-form-token-tools-toggle-frame">
      <i class="gbtf-setting-form__label-icon fa-solid fa-vector-square" aria-hidden="true"></i>
      {{localize "GBT.Tools.Config.ToggleFrame"}}
    </label>
    <input id="gbtf-setting-form-token-tools-toggle-frame" type="checkbox" name="toggleFrame" {{checked toggleFrame}} />
  </div>

  <div class="gbtf-setting-form__row">
    <label for="gbtf-setting-form-token-tools-disposition">
      <i class="gbtf-setting-form__label-icon fa-solid fa-people-arrows-left-right" aria-hidden="true"></i>
      {{localize "GBT.Tools.Config.Disposition"}}
    </label>
    <input id="gbtf-setting-form-token-tools-disposition" type="checkbox" name="disposition" {{checked disposition}} />
  </div>

  <div class="gbtf-setting-form__row">
    <label for="gbtf-setting-form-token-tools-mirror-artwork">
      <i class="gbtf-setting-form__label-icon fa-solid fa-left-right" aria-hidden="true"></i>
      {{localize "GBT.Tools.Config.MirrorArtwork"}}
    </label>
    <input id="gbtf-setting-form-token-tools-mirror-artwork" type="checkbox" name="mirrorArtwork" {{checked mirrorArtwork}} />
  </div>

  <div class="gbtf-setting-form__row">
    <label for="gbtf-setting-form-token-tools-custom-tint">
      <i class="gbtf-setting-form__label-icon fa-solid fa-eye-dropper" aria-hidden="true"></i>
      {{localize "GBT.Tools.Config.CustomTint"}}
    </label>
    <input id="gbtf-setting-form-token-tools-custom-tint" type="checkbox" name="customTint" {{checked customTint}} />
  </div>

</div>
