<form class="gb-nameplate">
  <div class="form-group">
    <label>Enabled</label>
    <input type="checkbox" name="enabled" {{#if enabled}}checked{{/if}} />
  </div>

  <div class="form-group">
    <label>Base Font Size (px)</label>
    <input type="number" name="baseFontSize" min="6" max="96" step="1" value="{{baseFontSize}}" />
  </div>

  <div class="form-group">
    <label>Font Family</label>
    <select name="fontFamily">
      {{#each FONT_CHOICES}}
        <option value="{{@key}}" {{#if (eq ../fontFamily @key)}}selected{{/if}}>{{this}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label>Use Player Color</label>
    <input type="checkbox" name="usePlayerColor" {{#if usePlayerColor}}checked{{/if}} />
  </div>

  <div class="form-group">
    <label>Default Color</label>
    <div style="display:flex; gap:8px; align-items:center;">
      <input type="text"  name="defaultColor-text"  value="{{defaultColor}}" placeholder="#RRGGBB" />
      <input type="color" name="defaultColor-color" value="{{defaultColor}}" />
    </div>
  </div>

  <div class="form-group">
    <label>Tint Mode</label>
    <select name="tintMode">
      {{#each TINT_CHOICES}}
        <option value="{{@key}}" {{#if (eq ../tintMode @key)}}selected{{/if}}>{{this}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label>Scale With Token</label>
    <input type="checkbox" name="scaleWithToken" {{#if scaleWithToken}}checked{{/if}} />
  </div>

  <footer class="sheet-footer flexrow" style="margin-top:8px; gap:8px; justify-content:flex-end;">
    <button type="submit" class="dialog-button">Save</button>
  </footer>
</form>
