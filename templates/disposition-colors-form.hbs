<table class="gbtf-color-form__table">
  <thead>
    <tr>
      <th>{{tableName}}</th>
      <th>{{localize "GBT.Common.ColorHex"}}</th>
      <th>{{localize "GBT.Common.ColorPicker"}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <td class="gbtf-color-form__label-cell">
        <label for="{{role}}-text">
          {{localize (concat "GBT.Disposition." role)}}
        </label>
      </td>
      <td class="gbtf-color-form__text-cell">
        <input id="{{role}}-text" type="text" name="{{role}}-text" value="{{value}}" placeholder="#RRGGBB" />
      </td>
      <td class="gbtf-color-form__picker-cell">
        <input id="{{role}}-color" type="color" name="{{role}}-color" value="{{value}}" />
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
