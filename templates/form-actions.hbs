<div class="gbtf-form-actions">
  <button type="button" class="dialog-button gbtf-form-actions__button gbtf-form-actions__button--secondary" data-action="reset-form">
    {{localize "GBT.Common.Reset"}}
  </button>
  <button type="button" class="dialog-button gbtf-form-actions__button gbtf-form-actions__button--secondary" data-action="defaults-form">
    {{localize "GBT.Common.Default"}}
  </button>
  <button type="button" class="dialog-button gbtf-form-actions__button gbtf-form-actions__button--secondary" data-action="close">
    {{localize "GBT.Common.Cancel"}}
  </button>
  <button type="submit" class="dialog-button gbtf-form-actions__button gbtf-form-actions__button--primary">
    {{localize "GBT.Common.Save"}}
  </button>
</div>
